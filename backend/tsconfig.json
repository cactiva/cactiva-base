{
    "compilerOptions": {
      "module": "commonjs",
      "strict": true,
      "outDir": "build",
      "removeComments": true,
      "experimentalDecorators": true,
      "target": "es6",
      "emitDecoratorMetadata": true,
      "moduleResolution": "node",
      "importHelpers": true,
      "typeRoots": ["node_modules/@types", "./libs/types"], 
    },
    "include": ["./libs/**/*.ts", "./controllers/**/*.ts"],
    "exclude": ["./res"]
  }
  